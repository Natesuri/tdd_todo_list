<%= link_to "Add a new todo", new_todo_path %>

<ul class='todos'>
  <% @todos.each do |todo| %>
    <li class='<%= 'completed' if todo.completed? %>'><%= todo.title %>
    <% if !todo.completed? %>
      <%= button_to 'Done', todo_completion_path(todo)%>
    <% else %>
      <%= button_to 'Incomplete', todo_completion_path(todo), method: :delete %>
    <% end %>
    </li>
  <% end %>
</ul>
